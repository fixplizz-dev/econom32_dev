# База данных PostgreSQL
DATABASE_URL="postgresql://econom32_user:econom32_password@localhost:5432/econom32_new"
POSTGRES_DB=econom32_new
POSTGRES_USER=econom32_user
POSTGRES_PASSWORD=econom32_password

# Redis
REDIS_URL="redis://localhost:6379"

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=econom32_minio
MINIO_SECRET_KEY=econom32_minio_password
MINIO_BUCKET_NAME=econom32-media
MINIO_USE_SSL=false

# ClamAV антивирус
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Настройки приложения
NODE_ENV=development
PORT=3001
FRONTEND_PORT=3000

# JWT секрет для аутентификации
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Email настройки (для уведомлений)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Настройки безопасности
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production

# Мониторинг
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin123

